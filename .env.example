# ───────────────────────────────
# General
# ───────────────────────────────
LOG_LEVEL=INFO
ENREACH_LOG_DIR=logs
ENREACH_LOG_LEVEL=INFO
ENREACH_LOG_FILE=logs/enreach.log
ENREACH_LOG_MAX_BYTES=5242880 # 5MB
ENREACH_LOG_BACKUP_COUNT=5
UI_THEME_DEFAULT=nebula
# Encryption key for database-backed secrets (Fernet, base64-encoded 32 bytes)
ENREACH_SECRET_KEY=

# ───────────────────────────────
# HTTPS (optional)
# Run API server with TLS if both are set
# ENREACH_SSL_CERTFILE=certs/localhost.pem
# ENREACH_SSL_KEYFILE=certs/localhost-key.pem
# If your key is encrypted:
# ENREACH_SSL_KEY_PASSWORD=

# ───────────────────────────────
# Authentication (optional)
# API: Bearer token for protected endpoints
# ENREACH_API_TOKEN=choose-a-strong-token
# UI: /app login (session-based)
# ENREACH_UI_PASSWORD=choose-a-strong-password
# UI session secret (long random string). If omitted, generated at start.
# ENREACH_UI_SECRET=change-me-long-random-string
# Bootstrap admin (when DB empty)
# ENREACH_DEFAULT_ADMIN_USERNAME=admin
# ENREACH_DEFAULT_ADMIN_PASSWORD=choose-a-strong-password

# ───────────────────────────────
# Database (optional; defaults to sqlite in ./data)
# ───────────────────────────────
# ENREACH_DB_URL=sqlite:///data/enreach.sqlite3

# ───────────────────────────────
# NetBox
# ───────────────────────────────
NETBOX_URL=https://netbox.example.com
NETBOX_TOKEN=your_api_token_here
# Extra (optional)
NETBOX_DEBUG=0
NETBOX_EXTRA_HEADERS=
NETBOX_DATA_DIR=data
NETBOX_XLSX_ORDER_FILE=

# ───────────────────────────────
# Atlassian / Confluence
# ───────────────────────────────
# Generate token: https://id.atlassian.com/manage-profile/security/api-tokens
ATLASSIAN_BASE_URL=https://your-domain.atlassian.net
ATLASSIAN_EMAIL=your_email@company.com
ATLASSIAN_API_TOKEN=your_api_token_here

# Confluence publishing
# Page receiving the CMDB Excel
CONFLUENCE_CMDB_PAGE_ID=981533033
# Optional overrides
CONFLUENCE_DEVICES_PAGE_ID=981533060
CONFLUENCE_VMS_PAGE_ID=981794840
# Optional macros (Table Filter & Charts app required)
# CONFLUENCE_ENABLE_TABLE_FILTER=1
# CONFLUENCE_ENABLE_TABLE_SORT=1

# ───────────────────────────────
# Chat providers
# ───────────────────────────────
# Default provider & models (can be overridden in UI)
CHAT_DEFAULT_PROVIDER=openai
CHAT_DEFAULT_TEMPERATURE=0.2
CHAT_SYSTEM_PROMPT=

# OpenAI
OPENAI_API_KEY=
CHAT_DEFAULT_MODEL_OPENAI=gpt-5-nano
# OpenRouter
OPENROUTER_API_KEY=
CHAT_DEFAULT_MODEL_OPENROUTER=openrouter/auto
# Anthropic
ANTHROPIC_API_KEY=
CHAT_DEFAULT_MODEL_CLAUDE=claude-3-5-sonnet
# Google
GOOGLE_API_KEY=
CHAT_DEFAULT_MODEL_GEMINI=gemini-1.5-flash
# ───────────────────────────────
# OpenAI Rate Limiting & Token Tracking
# ───────────────────────────────
# Rate limits (adjust based on your OpenAI plan)
OPENAI_REQUESTS_PER_MINUTE=60
OPENAI_REQUESTS_PER_HOUR=3000
OPENAI_TOKENS_PER_MINUTE=150000
OPENAI_TOKENS_PER_HOUR=1000000

# Retry configuration
OPENAI_MAX_RETRIES=5
OPENAI_BASE_DELAY=1.0
OPENAI_MAX_DELAY=300.0
OPENAI_STABILIZATION_MINUTES=15

# ───────────────────────────────
# Monitoring (Zabbix)
# ───────────────────────────────
ZABBIX_API_URL=https://zabbix.example.com/api_jsonrpc.php
# Optional alternates/links
ZABBIX_HOST=https://zabbix.example.com
ZABBIX_WEB_URL=https://zabbix.example.com
ZABBIX_API_TOKEN=
ZABBIX_SEVERITIES=2,3,4
ZABBIX_GROUP_ID=
ZABBIX_EXCLUDE_GROUP_PATTERNS=Autoconfig%

# ───────────────────────────────
# Backup Storage
# ───────────────────────────────
# Backup type: sftp, scp, or local
BACKUP_ENABLE=1
BACKUP_TYPE=local

# SFTP/SCP Configuration (when BACKUP_TYPE=sftp or scp)
BACKUP_HOST=backup.example.com
BACKUP_PORT=22
BACKUP_USERNAME=backup_user
BACKUP_PASSWORD=your_password_here
# Alternative: use private key instead of password
# BACKUP_PRIVATE_KEY_PATH=~/.ssh/id_rsa
BACKUP_REMOTE_PATH=/backups/enreach-tools

# Local Backup Configuration (when BACKUP_TYPE=local)
BACKUP_LOCAL_PATH=backups

# Optional: Create timestamped subdirectories for each backup
BACKUP_CREATE_TIMESTAMPED_DIRS=false
# Optional: Compress backups (future feature)
BACKUP_COMPRESS=false

# ───────────────────────────────
# MCP Servers (optional)
# ───────────────────────────────
# Context7 / MCP
CONTEXT7_API_KEY=
